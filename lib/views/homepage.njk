{% extends "base.njk" %}

{% set productName = "Prototype Rig" %}
{% set title = "Rapidly create prototypes of GOV.UK services" %}

{% block pageTitle %}{{ title }}{% endblock %}

{% block pageStyles %}
  <style>.govuk-header__logo { width: auto }</style>
{% endblock %}

{% block beforeContent %}{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ title | noOrphans | safe }}</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body-l">{{ page.description }}</p>

      {{ govukButton({
        href: "/docs/install",
        text: "Get started",
        isStartButton: true
      }) }}

      {{ page.body | govukMarkdown | safe }}
    </div>
  </div>
{% endblock %}
