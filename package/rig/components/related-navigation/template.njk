{% set headingLevel = params.headingLevel or 2 %}

<div class="rig-related-navigation {%- if params.classes %} {{ params.classes }}{% endif -%}"
  {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  {% for section in params.sections %}
    <nav class="rig-related-navigation__nav-section" role="navigation" aria-labelledby="related-nav-{{ "TODO" }}">
      <h{{ headingLevel }} class="rig-related-navigation__main-heading" id="related-nav-related_items-{{ "TODO" }}">
        {{ section.title or "Related content" }}
      </h{{ headingLevel }}>
      {% if section.items %}
        <ul class="rig-related-navigation__link-list">
          {% for item in section.items %}
            <li class="rig-related-navigation__link">
              <a class="govuk-link rig-related-navigation__section-link rig-related-navigation__section-link--other" href="{{ item.href }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
      {% for subsection in section.subsections %}
        <nav role="navigation" class="rig-related-navigation__nav-section" aria-labelledby="related-nav-{{ "TODO" }}">
          <h{{ headingLevel + 1 }} class="rig-related-navigation__sub-heading" id="related-nav-topics-{{ "TODO" }}">
            {{ subsection.title }}
          </h{{ headingLevel + 1 }}>
          <ul class="rig-related-navigation__link-list">
            {% for item in subsection.items %}
              <li class="rig-related-navigation__link">
                <a class="govuk-link rig-related-navigation__section-link" href="{{ item.href }}">{{ item.text }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endfor %}
    </nav>
  {% endfor %}
</div>
