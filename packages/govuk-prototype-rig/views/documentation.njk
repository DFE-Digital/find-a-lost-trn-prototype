{% extends "template.njk" %}

{% set productName = "Prototype Rig" %}
{% set title = page.title %}

{% block pageTitle %}{{ title }} - GOV.UK Prototype Rig{% endblock %}

{% block bodyStart %}
  <style>.govuk-header__logo { width: auto }</style>
{% endblock %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: breadcrumbItems
  }) if breadcrumbItems }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      {{ xGovukSideNavigation({
        current: current,
        items: sideNavigationItems
      }) if sideNavigationItems }}
    </div>
    <div class="govuk-grid-column-three-quarters">
      <h1 class="govuk-heading-xl">{{ title | noOrphans | safe }}</h1>

      {% if page.description %}
        <p class="govuk-body-l">{{ page.description }}</p>
      {% endif %}

      {{ page.body | govukMarkdown({
        headingsStartWith: "l"
      }) | safe }}
    </div>
  </div>
{% endblock %}
