<nav class="x-govuk-side-navigation{%- if params.classes %} {{ params.classes }}{% endif %}" aria-labelledby="x-govuk-side-navigation-heading"
  {%- for attribute, value in params.attributes %} {{ attribute }}="{{value}}"{% endfor %}>
  <h2 class="govuk-visually-hidden" id="x-govuk-side-navigation-heading">{{ params.visuallyHiddenTitle or "Pages in this section" }}</h2>
  {% for theme, items in params.items | groupby("theme") %}
    {% if theme != "undefined" %}
      <h3 class="x-govuk-side-navigation__theme">{{ theme }}</h3>
    {% endif %}
    <ul class="x-govuk-side-navigation__section">
      {% for item in items %}
        {% set isCurrentPage = (item.href == params.current.url) %}
        {% set isCurrentSection = (item.href == params.current.url) or (params.current.url | startsWith(item.href)) %}
        <li class="x-govuk-side-navigation__section-item{% if isCurrentSection %} x-govuk-side-navigation__section-item--current{% endif %}">
          <a class="x-govuk-side-navigation__link" href="{{ item.href }}"{% if isCurrentPage %} aria-current="true"{% endif %}>{{ item.text }}</a>
          {% if (item.items) and isCurrentSection %}
            <ul class="x-govuk-side-navigation__section x-govuk-side-navigation__section--nested">
              {% for subitem in item.items %}
                {% set isCurrentSubPage = subitem.href == params.current.url %}
                <li class="x-govuk-side-navigation__section-item">
                  <a class="x-govuk-side-navigation__link" href="{{ subitem.href }}"{% if isCurrentSubPage %} aria-current="true"{% endif %}>{{ subitem.text }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endfor %}
</nav>
