{% extends "layouts/default.njk" %}

{% set title = "Confirmation page" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    <div class="govuk-panel govuk-panel--confirmation">
  <h1 class="govuk-panel__title">
    Request submitted
  </h1>
  <div class="govuk-panel__body">
    You will receieve a response to <br><strong>{{ data['email-address'] or 'your-email@domain.com' }}</strong> within 5 working days.
  </div>
</div>

      <h2 class="govuk-heading-m">What happens next?</h2>
      <p class="govuk-body">We aim to respond via email within 5 working days.</p>
    </div>
  </div>
{% endblock %}
