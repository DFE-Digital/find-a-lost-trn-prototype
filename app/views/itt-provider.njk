{% extends "layouts/default.njk" %}

{% set title = "Find your TRN" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block content %}
  {% set formerITTProviderNameHtml %}
    {{ govukInput({
      label: {
        text: "Your school, university or other training provider"
      },
      id: "former-itt-provider",
      name: "former-itt-provider"
    }) }}
  {% endset %}

  {% set currentITTProviderNameHtml %}
    {{ govukInput({
      label: {
        text: "Your school, university or other training provider"
      },
      id: "current-itt-provider",
      name: "current-itt-provider"
    }) }}
  {% endset %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        {{ govukRadios(decorate({
          fieldset: {
            legend: {
              classes: "govuk-fieldset__legend--xl",
              isPageHeading: true,
              text: 'Have you ever trained as a teacher in England or Wales?'
            }
          },
          items: [
            {
              text: "Yes, I completed my training",
              value: 'yes',
              conditional: { html: formerITTProviderNameHtml }
            },
            {
              text: "Yes, Iâ€™m currently in training",
              value: 'yes',
              conditional: { html: currentITTProviderNameHtml }
            },
            {
              text: "No",
              value: 'no'
            }]
        }, ["wizard", "has-done-itt"])) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
