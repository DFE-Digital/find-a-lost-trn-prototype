{% extends "base.njk" %}

{% set title = "Question page" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="#" method="post" novalidate>
        {{ govukRadios(decorate({
          fieldset: {
            legend: {
              text: "Where do you live?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [{
            text: "England",
            value: "england"
          }, {
            text: "Scotland",
            value: "scotland"
          }, {
            text: "Wales",
            value: "wales"
          }, {
            text: "Northern Ireland",
            value: "northern-ireland"
          }]
        }, "where-do-you-live")) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
