{% extends "layouts/default.njk" %}

{% set title = "Find out your Teacher Reference Number (TRN)" %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/",
    serviceUrl: "/",
    containerClasses: "govuk-width-container"
  }) }}

  <div class="app-masthead">
    <div class="govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="app-masthead__title govuk-heading-xl govuk-!-margin-bottom-3">
            {{ title }}
          </h1>
          <h3 class="app-masthead__subtitle govuk-heading-l">Prototype</h3>
        </div>
        <div class="govuk-grid-column-one-third">
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block beforeContent %}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukButton({
        text: 'View prototype',
        href: '/start',
        isStartButton: true
      }) }}

      <ul class="govuk-list">
        <li>
          <a href="/public/govuk-trn.html">
            Teacher reference number (TRN) guidance: mock-up
          </a>
        </li>
      </ul>

      <h2 class="govuk-heading-m govuk-!-margin-top-5">Related links</h2>

      <ul class="govuk-list">
        <li>
          <a href="https://teacher-id-design-history.herokuapp.com">
            Design history
          </a>
        </li>
        <li>
          <a href="https://github.com/KateLee42/find-your-trn-prototype">
            Prototype GitHub repository
          </a>
        </li>
        <li>
          <a href="https://github.com/benilovj/teacher-id-design-history">
            Design history GitHub repository
          </a>
        </li>
      </ul>
    </div>
  </div>
{% endblock %}
