{% extends "layouts/default.njk" %}

{% set title = "Your email address" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
      <h1 class="govuk-heading-xl">{{ title }}</h1>
        <p>We will send your TRN to the email address you provide.</p>
        {{ govukInput(decorate({
            id: "email-address",
            name: "email-address"
          }, ['email-address'])) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
