{% extends "layouts/default.njk" %}

{% set title = "Check answers page" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-xl">TRN could not be found</h1>
      <p>We could not find your TRN in the Teaching Regulation Agency records using the details you provided.</p>
      <p>You can send a request to the Teaching Regulation Agency instead using the details below.</p>
      {{ govukSummaryList({
        classes: "govuk-!-margin-bottom-9",
        rows: [{
            key: {
            text: "Email address"
          },
          value: {
            text: data['email-address']
          },
          actions: {
            items: [{
              text: "Change",
              visuallyHiddenText: "email address",
              href: "/email"
            }]
          }
        }, {
          key: {
            text: "Name"
          },
          value: {
            text: (data['first-name'] + ' ' + data['last-name']) if data['first-name']
          },
          actions: {
            items: [{
              text: "Change",
              visuallyHiddenText: "name",
              href: "/name"
            }]
          }
        }, {
          key: {
            text: "Date of birth"
          },
          value: {
            text: data['date-of-birth'] | dateWithYear if data['date-of-birth']
          },
          actions: {
            items: [{
              text: "Change",
              visuallyHiddenText: "date of birth",
              href: "/dob"
            }]
          }
        }, {
          key: {
            text: "National Insurance number"
          },
          value: {
            text: data['national-insurance-number']
          },
          actions: {
            items: [{
              text: "Change",
              visuallyHiddenText: "National Insurance number",
              href: "/ni-number"
            }]
          }
        }, {
          key: {
            text: "Teacher training provider"
          },
          value: {
            text:  data['itt-provider']
          },
          actions: {
            items: [{
              text: "Change",
              visuallyHiddenText: "teacher training provider",
              href: "/itt-provider"
            }]
          }
        } if data['itt-provider']
      ]}) }}

      <p>You will receive a response via email within 5 working days.</p>

      <form method="post" novalidate>
        <input type="hidden" name="answers-checked" value="true">

        {{ govukButton({
          text: "Request TRN"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
