{% extends "layouts/default.njk" %}

{% set title = "Find your TRN" %}

{% block pageNavigation %}
  {{ govukBackLink({
    href: paths.back
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="post" novalidate>
        {{ govukInput({
          label: {
            text: "Where did you complete your Initial Teacher Training?",
            classes: "govuk-label--l",
            isPageHeading: true
            },
            hint: {
              text: "If you have ever undertaken a course of Initial Teacher Training, please provide the name of the education establishment"
            },
            id: "itt-provider",
            name: "itt-provider"
          }) }}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
